<%= form_with(model: portfolio, local: true) do |f| %>
  <div class="row">
  <div class="col-md-8">
    <div class="form-group">
      <%= f.label :title%>
      <%= f.text_field :title, class: 'form-control'%>
    </div>

    <div class="form-group">
      <%= f.label :subtitle%>
      <%= f.text_field :subtitle, class: 'form-control'%>
    </div>

    <div class="form-group">
      <%= f.label :main_image%>
      <%= f.file_field :main_image, class: 'form-control'%>
    </div>

    <div class="form-group">
      <%= f.label :thumb_image%>
      <%= f.file_field :thumb_image, class: 'form-control'%>
    </div>
  </div>

  <div class="col-md-4">
    <div class="form-group">
      <%= f.label :body%>
      <%= f.text_area :body, class: 'form-control', rows: 12%>
    </div>
  </div>

  <div class="col-md-12">
    <h4>Technologies Used:</h4>
      <%= f.fields_for :technologies do |technology_form|%>
      <div class="form-group">
        <%= technology_form.label :name%>
        <%= technology_form.text_field :name, class: 'form-control'%>
      </div>
      <%end%>
  </div>

  <div class="actions">
    <%= f.submit 'Update Profile', class:"btn btn-primary"%>
  </div>
  </div>
<% end %>
